@model MVCBasicCRUD.Models.Student

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    
    <h3>Edit</h3>

    @if(ViewBag.Message != null)
    {
        <div class="well">
            @ViewBag.Message
        </div>
    }

    @if (Model != null)
    {
        using (Html.BeginForm("Save", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.RollNo)
                @Html.TextBoxFor(s => s.RollNo, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Marks)
                @Html.TextBoxFor(s => s.Marks, new { @class = "form-control" })
            </div>
            
            <input type="submit" class="btn btn-primary" value="Save" name="save" />
        }
    }
    else
    {
        <span> No Student Found! </span>
    }
</div>